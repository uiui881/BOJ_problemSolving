import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
	
		
		Scanner sc= new Scanner(System.in);
		long A = sc.nextLong();
		long B = sc.nextLong();
		long C = sc.nextLong();
		long n;
		
		if(B>=C) {n=-1;}
		else {n = (A/(C-B))+1; }
		System.out.println(n);
	}
}
