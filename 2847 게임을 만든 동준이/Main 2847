import java.util.*;
import java.io.*;


public class Main{
	
	public static void main(String[] args){
		
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int[] arr = new int[n];
		int cnt=0;
		for(int i=0; i<arr.length;i++) {
			arr[i] = sc.nextInt();
		}
		
		for(int i=arr.length-1; i>0; i--) {
			while(arr[i-1]>= arr[i]) {
				arr[i-1]--;
				cnt++;
			}
		}
		
		System.out.println(cnt);
	}
}
